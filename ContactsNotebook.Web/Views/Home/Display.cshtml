
@model Contact
@{
    string requestMethod = ViewBag.RequestMethod ?? "post";
    bool isEditable = User.Identity!.IsAuthenticated && User.IsInRole("Administrator");
}

<div class="container">
        <div class="row">
            <div class="col-md-6">
            <form id="contactForm" method="post" class="bg-white">
                     <input type="hidden" name="_method" value="@requestMethod">
                     @* <input type="hidden" asp-for="Id" /> *@
                    <div class="border p-3 mt-1">
                        <div class="row pb-0">
                            <div class="col-md-6">
                                <h2 class="text-primary px-0">Контакт</h2>
                            </div>
                            <div class="col-md-6 text-end px-1">

                            </div>
                            <hr />
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="LastName" class="p-0"></label>
                            <input asp-for="LastName" type="text" readonly class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="FirstName" class="p-0"></label>
                            <input asp-for="FirstName" type="text" readonly class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="Patronymic" class="p-0"></label>
                            <input asp-for="Patronymic" type="text" readonly class="form-control" />
                            <span asp-validation-for="Patronymic" class="text-danger"></span>
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="TelephoneNumber" class="p-0"></label>
                            <input asp-for="TelephoneNumber" type="text" readonly class="form-control" />
                            <span asp-validation-for="TelephoneNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="Address" class="p-0"></label>
                            <input asp-for="Address" type="text" readonly class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="mb-1 row p-1">
                            <label asp-for="Description" class="p-0"></label>
                            <input asp-for="Description" type="text" readonly class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row pt-4">
                            <div class="col-6 px-1">

                            @* <a href="~/Edit/@Model.Id" class="btn btn-warning form-control editable-btn">
                                    <i class="bi bi-unlock"></i> Редактировать
                                </a> *@
                            @if (isEditable)
                            {
                                <a href="~/Edit/@Model.Id" class="btn btn-warning form-control editable-btn">
                                    <i class="bi bi-unlock"></i> Редактировать
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-warning form-control editable-btn" disabled>
                                    <i class="bi bi-unlock"></i> Редактировать
                                </button>
                            }
                            </div>
                            <div class="col-6 px-1">
                                <a href="/" class="btn btn-secondary border form-control">
                                    Вернуться к списку
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
