@using ContactsNotebook.Models;
@model Contact;

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Данные контакта:</h1>
    <table class="table">
        <tr>
            <td>ID:</td>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <td>Фамилия:</td>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <td>Имя:</td>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <td>Отчество:</td>
            <td>@Model.Patronymic</td>
        </tr>
        <tr>
            <td>Телефон:</td>
            <td>@Model.TelephoneNumber</td>
        </tr>
        <tr>
            <td>Адрес:</td>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <td>Описание:</td>
            <td>@Model.Description</td>
        </tr>
    </table>
</body>
</html>
