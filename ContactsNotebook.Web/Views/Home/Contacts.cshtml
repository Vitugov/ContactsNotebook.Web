@using ContactsNotebook.Models;
@model List<Contact>;
<!DOCTYPE html>
<html lang="ru">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Список контактов</title>
    <link rel="stylesheet" href="lib\bootstrap\dist\css\bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/2.0.8/css/dataTables.dataTables.min.css" />
    </head>
    <body>
    <div class="container">
        <div class="row pt-4">
                <div class="col-4">
                    <h2 class="text-primary py-2">Список контактов</h2>
                </div>
            <div class="col-4 text-end px-0 py-2">
                <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-file-earmark-plus"></i> Создать новый контакт
                    </a>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-8">
            <table id="tblData" class="table table-hover">
                <thead>
                    <tr class="table-primary">
                            <th scope="col">Id</th>
                            <th scope="col">Фамилия</th>
                            <th scope ="col">Имя</th>
                            <th scope="col">Отчество</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>


    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/2.0.8/js/dataTables.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/Contacts.js" asp-append-version="true"></script>

    </body>
</html>




