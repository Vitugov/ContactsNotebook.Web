@{
    bool isEditable = ViewBag.UserRole == "Administrator" ? true : false;
    bool CanAddNew = ViewBag.UserRole == "User" || isEditable ? true : false;
}

    <div class="container">
        <div class="row pt-2">
                <div class="col-4">
                    <h2 class="text-primary py-2">Список контактов</h2>
                </div>
            <div class="col-4 text-end px-0 py-2">
            @if (CanAddNew)
            {
                <a asp-controller="Home" asp-action="Edit" class="btn btn-primary">
                    <i class="bi bi-file-earmark-plus"></i> Создать новый контакт
                    </a>
            }
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-8">
            <table id="contacts" class="table table-hover">
                <thead>
                    <tr class="table-primary">
                        <th class="py-2" scope="col">Id</th>
                        <th class="py-2" scope="col">Фамилия</th>
                        <th class="py-2" scope="col">Имя</th>
                        <th class="py-2" scope="col">Отчество</th>
                        <th class="py-2" scope="col"></th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
        integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
        crossorigin="anonymous"></script>
    <script src="//cdn.datatables.net/2.0.8/js/dataTables.min.js" asp-append-version="true"></script>
    <script>
        var isEditable = @Json.Serialize(isEditable);
    </script>
    <script src="~/js/Contacts.js" asp-append-version="true"></script>




